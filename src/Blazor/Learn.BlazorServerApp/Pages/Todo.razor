@page "/todo"

<h3>Todo</h3>
<PageTitle>Todo</PageTitle>

@using Learn.BlazorServerApp.Models
@using Learn.BlazorServerApp.Services
@inject ToDoService TodoServ

@if (TodoItems == null || TodoItems.Count == 0)
{
    <p>No Todo Items <a href="/Add">Click Here to Add</a></p>
}
else
{
    <a href="/todo/add">Click Here to Add</a>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Completed Date</th>
                <th>Scheduled Date</th>
                <th>Created Date</th>
                <th>Modified Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in TodoItems)
            {
                <tr>
                    <td>@items.Title</td>
                    <td>@items.IsCompleted</td>
                    <td>@ShowDate(@items.CompletedDate)</td>
                    <td>@ShowDate(@items.ScheduledDate)</td>
                    <td>@ShowDateTime(@items.CreatedDate)</td>
                    <td>@ShowDateTime(@items.ModifiedDate)</td>
                    <td>
                        <button @onclick="() => Delete(items.Id)">Delete</button>
                        <a class="button" href="/todo/edit/@items.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TodoItem> TodoItems;
    protected async override Task OnInitializedAsync()
    {
        TodoItems = await TodoServ.GetList();
    }

    private async void Delete(int id)
    {
        TodoServ.Delete(id);
        TodoItems = await TodoServ.GetList();
    }
    
    private string ShowDate(DateTime date)
    {
        if (date == DateTime.MinValue)
            return "";
        return date.ToString("MM/dd/yyyy");
    }
    private string ShowDateTime(DateTime date)
    {
        if (date == DateTime.MinValue)
            return "";
        return date.ToString("MM/dd/yyyy hh:mm tt");
    }

}
